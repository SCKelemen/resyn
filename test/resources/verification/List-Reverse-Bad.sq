data List a <q :: Int> where
	Nil :: List a <q>
	Cons :: x: a -> xs: List {a | | q} <q> -> List a <q>

snoc :: x:a -> xs: List {a | | 1} <{0}> -[1]-> List a <{0}>
snoc = \x. \xs.
  match xs with
    Nil       -> Cons x Nil
    Cons y ys -> Cons y (snoc x ys)

reverse :: xs: List {a | | 1} <{1}> -[1]-> List a <{0}>
reverse = \xs. 
  match xs with                       --xs :: List {a | | 1} <{1}>
    Nil       -> Nil                  --y :: {a | | 1}, ys :: List {a | | 2} <{1}>
    Cons y ys -> snoc y (reverse ys)  --reverse ys :: List {a | | 1} <{0}> 
